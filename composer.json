{
    "name": "hexlet/code",
    "description": "hexlet study project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.10"
    },
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Diff/Builder.php",
            "src/Diff/Tree.php",
            "src/Differ.php",
            "src/Formatters.php",
            "src/Formatters/Json.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php",
            "src/Parsers.php",
            "src/Parsers/Json.php",
            "src/Parsers/Yaml.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
          "Php\\Package\\Tests\\": "tests"
        }
    }
}
